# ===========================================
# WatchHere Backend Environment Variables
# ===========================================
# Copy this file to .env and update with your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection
# Local: mongodb://localhost:27017/watchhere
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/watchhere
MONGODB_URI=mongodb://localhost:27017/watchhere

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
# Local Redis
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Cloud Redis (alternative to above)
# REDIS_URL=redis://username:password@host:port
# REDIS_URL=rediss://username:password@host:port (SSL)

# ===========================================
# AWS SERVICES CONFIGURATION
# ===========================================
# Get from AWS Console: https://console.aws.amazon.com
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=watchhere-videos
# Optional: CloudFront for CDN
CLOUDFRONT_URL=https://d123456789.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=E123456789ABCD

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
BCRYPT_ROUNDS=12

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
# Google OAuth: https://console.developers.google.com
GOOGLE_CLIENT_ID=123456789-abcdef.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret

# GitHub OAuth: https://github.com/settings/applications
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===========================================
# AI SERVICES (Optional)
# ===========================================
# OpenAI API: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10

# ===========================================
# FILE PROCESSING
# ===========================================
# FFmpeg path (usually auto-detected)
FFMPEG_PATH=/usr/bin/ffmpeg

# ===========================================
# EMAIL SERVICE (Optional)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password