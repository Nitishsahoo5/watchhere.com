{
  "name": "watchhere-backend",
  "version": "1.0.0",
  "description": "WatchHere video streaming platform backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:full": "node ../start-dev.js",
    "docker:dev": "docker-compose -f ../docker-compose.dev.yml up -d mongodb redis",
    "docker:stop": "docker-compose -f ../docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f ../docker-compose.dev.yml logs -f",
    "docker:clean": "docker-compose -f ../docker-compose.dev.yml down -v",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'Backend build complete'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t watchhere-backend .",
    "docker:run": "docker run -p 5000:5000 watchhere-backend",
    "deploy:aws": "./scripts/deploy-backend.sh",
    "db:seed": "node scripts/seedDatabase.js"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.883.0",
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/lib-storage": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.7.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "tslib": "^2.8.1",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
