# ===========================================
# WatchHere Mobile Environment Variables
# ===========================================

# API Configuration
# Development: http://localhost:5000/api (use your computer's IP for physical device)
# Production: https://api.watchhere.com/api
API_BASE_URL=http://192.168.1.100:5000/api

# WebSocket Configuration
# Development: ws://192.168.1.100:5000
# Production: wss://api.watchhere.com
WEBSOCKET_URL=ws://192.168.1.100:5000

# Firebase Configuration
# Get from Firebase Console: https://console.firebase.google.com
FIREBASE_PROJECT_ID=watchhere-app
FIREBASE_API_KEY=AIzaSyC...
FIREBASE_AUTH_DOMAIN=watchhere-app.firebaseapp.com
FIREBASE_STORAGE_BUCKET=watchhere-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:android:abcdef123456

# Push Notifications
# Firebase Cloud Messaging Server Key
FCM_SERVER_KEY=AAAAxxxxxxx:APA91bF...

# App Configuration
APP_NAME=WatchHere
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# OAuth Configuration (for mobile OAuth flows)
GOOGLE_CLIENT_ID=123456789-abcdef.apps.googleusercontent.com
GITHUB_CLIENT_ID=your_github_client_id

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_PLAYBACK=true
ENABLE_VOICE_SEARCH=true

# Analytics (Optional)
# Google Analytics for Firebase
# GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
# SENTRY_DSN=https://your-mobile-sentry-dsn

# Development Settings
# Enable dev menu and debugging
DEV_MODE=true
ENABLE_FLIPPER=true